@model ML.Cine
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12 text-center">
        <h2>Formulario Cines</h2>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Form", "Cine", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {

            <div class="row">
                <div class="col">
                    @Html.LabelFor(model => model.IdCine, new { @class = "visually-hidden" })
                    @Html.TextBoxFor(model => model.IdCine, new { @class = "visually-hidden form-control" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Nombre)
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa-solid fa-circle-user fa-beat" style="color: #54A3B1"></i></span>
                        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", @id = "txtNumeroExterior" })
                        @Html.ValidationMessageFor(model => model.Nombre)
                    </div>
                </div>
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Direccion)
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa-solid fa-circle-user fa-beat" style="color: #54A3B1"></i></span>
                        @Html.TextBoxFor(model => model.Direccion, new { @class = "form-control", @id = "txtNumeroExterior" })
                        @Html.ValidationMessageFor(model => model.Direccion)
                    </div>
                </div>
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Venta)
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa-solid fa-circle-user fa-beat" style="color: #54A3B1"></i></span>
                        @Html.TextBoxFor(model => model.Venta, new { @class = "form-control", @id = "txtNumeroExterior" })
                        @Html.ValidationMessageFor(model => model.Venta)
                    </div>
                </div>
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Zona)
                    @Html.DropDownListFor(model => model.Zona.IdZona, new SelectList(Model.Zona.Zonas, "IdZona", "Nombre"), "Selecciona una opción", new { @class = "form-control", @id = "ddlArea" })
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        <input type="submit" value="Guardar" class="btn btn-success" />
                        @Html.ActionLink("Regresar", "GetAll", "Cine", htmlAttributes: new { @class = "btn btn-danger" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>